# LinkedIn Job Agent Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://linkedin_user:linkedin_pass@localhost:5432/linkedin_jobs
DATABASE_POOL_SIZE=20

# LinkedIn Credentials (REQUIRED)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_secure_password

# Browser Settings
HEADLESS_MODE=false  # Set to true for headless operation

# Claude AI Integration
CLAUDE_ENGINE_PATH=~/claude-eng
# CLAUDE_API_KEY=your_api_key_if_needed

# Job Search Defaults
DEFAULT_LOCATION=San Jose, CA
DEFAULT_ZIP_CODE=95128
SEARCH_RADIUS_MILES=50
POSTING_AGE_DAYS=7
MIN_MATCH_SCORE=0.7

# Rate Limiting (Important for avoiding suspension)
DAILY_APPLICATION_LIMIT=50
SEARCH_DELAY_MIN=5.0
SEARCH_DELAY_MAX=15.0
APPLY_DELAY_MIN=10.0
APPLY_DELAY_MAX=30.0

# Proxy Settings (Optional - for additional stealth)
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=proxy_user
# PROXY_PASSWORD=proxy_pass

# Feature Flags
DRY_RUN=false        # Test without actually applying
AUTO_APPLY=false     # Automatically apply to matched jobs
SAVE_ONLY=false      # Only save jobs, don't apply

# Debug Mode
DEBUG=false          # Enable detailed logging